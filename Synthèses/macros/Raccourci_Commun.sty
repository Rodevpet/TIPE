% Image
\newcommand{\image}[1]{
    \immediate\write18{wget #1}
    \filename@parse{#1}
    \def\NOM {\filename@base.\filename@ext}
    \includegraphics{\NOM}
    \AtVeryEndDocument{\immediate\write18{rm \NOM}}
}

